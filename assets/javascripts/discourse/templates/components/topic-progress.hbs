<span id="new-button-location">
{{#unless hideProgress}}
  {{yield}}
{{/unless}}

{{#if showBackButton}}
  <div class='progress-back-container'>
    {{d-button label="topic.timeline.back" class="btn-primary progress-back" action=(action "goBack") icon="arrow-down"}}
  </div>
{{/if}}

{{#if topic.details.can_create_post}}
  {{d-button class="btn-primary create mobile-view"
             id ="floating-reply-button"
             icon="reply"
             action=(action "replyToPost")
             label="topic.reply.title"
             title="topic.reply.help"}}
{{/if}}

<nav id='topic-progress' title="{{i18n 'topic.progress.title'}}" class="{{if hideProgress 'hidden'}}">
  <div class='nums'>
    <h4>{{progressPosition}}</h4><span class="{{if hugeNumberOfPosts 'hidden'}}">
    <span>/</span>
    <h4>{{postStream.filteredPostsCount}}</h4></span>
  </div>
</nav>
</span>
